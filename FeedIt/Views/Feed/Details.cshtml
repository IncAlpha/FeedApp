@model ArticleDetailsViewModel
@{
    ViewData["Title"] = "Статья";
}

<div class="container w-75">
    <div class="card">
        <div class="card-body">
            <h3 class="display-4">
                <b>@Model.Article.Title</b>
            </h3>
            <hr/>
            <a
                asp-controller="Account" asp-action="Details" asp-route-login="@Model.Author.Login"
                class="text-dark text-monospace">
                @Model.Author.PublicName
            </a>
            <p class="text-justify article-content">@Model.Article.Content</p>
        </div>
    </div>

    @if (Model.IsOwner)
    {
        <div class="mt-3 row pl-3 pr-3">
            <div class="text-right col-sm">
                <a
                    asp-controller="Feed" asp-action="Edit" asp-route-id="@Model.Article.Id"
                    class="text-center btn btn-primary btn-sm">
                    Изменить
                </a>
                <a
                    asp-controller="Feed" asp-action="Delete" asp-route-id="@Model.Article.Id"
                    class="text-center btn btn-danger btn-sm">
                    Удалить
                </a>
            </div>
        </div>
    }
</div>