@model UserDetailsViewModel

<div class="container w-75">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    <p class="display-4">
                        @Model.PublicName
                    </p>
                </div>

                @if (!Model.IsOwner)
                {
                    <div class="text-right col-sm">
                        @if (Model.IsSubscribed)
                        {
                            <a
                                asp-controller="Account" asp-action="Unsubscribe" asp-route-subscriptionLogin="@Model.Login"
                                class="text-center btn btn-outline-secondary btn-lg">
                                Отписаться
                            </a>
                        }
                        else
                        {
                            <a
                                asp-controller="Account" asp-action="Subscribe" asp-route-subscriptionLogin="@Model.Login"
                                class="text-center btn btn-primary btn-lg">
                                Подписаться
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h4>Статьи</h4>
            @foreach (var article in Model.Articles)
            {
                <a
                    asp-controller="Feed" asp-action="Details" asp-route-id="@article.Id"
                    class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@article.Title</h5>
                        <div>
                            <small class="text-muted">@article.CreatedAt</small>
                        </div>
                    </div>

                    <p class="mb-1 article-preview">@article.Content</p>
                </a>
            }
        </div>
    </div>
</div>