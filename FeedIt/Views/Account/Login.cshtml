@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Авторизация</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
<div class="text-center container w-50">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="mt-4">
            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <input class="form-control" type="text" asp-for="Login" placeholder="Логин" maxlength="20"/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="form-control" type="password" asp-for="Password" placeholder="Пароль"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Войти"/>
            </div>

            <div class="form-group">
                <a class="btn-link" asp-action="Register" asp-controller="Account">Регистрация</a>
            </div>
        </div>
    </form>
</div>
</body>
</html>