@model PaginationViewModel

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a
                    asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.PageNumber - 1)"
                    class="page-link">
                    Предыдущая
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Предыдущая</a>
            </li>
        }

        @for (int i = 1; i < Model.TotalPages + 1; i++)
        {
            @if (Model.PageNumber == i)
            {
                <li class="page-item active">
                    <p class="page-link">@i</p>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a
                        asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@i"
                        class="page-link">
                        @i
                    </a>
                </li>
            }
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a
                    asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.PageNumber + 1)"
                    class="page-link">
                    Следующая
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Следующая</a>
            </li>
        }
    </ul>
</nav>