@model RegistrationModel

@{
    ViewBag.Title = "Регистрация";
}

<div class="container">
    <form asp-action="Registration" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <div class="container">
            <input type="text" asp-for="PublicName" placeholder="Публичное имя"/>
            <br/>
            <span class="error" asp-validation-for="PublicName"></span>
        </div>

        <div class="container">
            <input type="text" asp-for="Login" placeholder="Логин"/>
            <br/>
            <span class="error" asp-validation-for="Login"></span>
        </div>

        <div class="container">
            <input asp-for="Password" placeholder="Пароль"/>
            <br/>
            <span class="error" asp-validation-for="Password"></span>
        </div>

        <div class="container">
            <input asp-for="PasswordConfirmation" placeholder="Повторите пароль"/>
            <br/>
            <span class="error" asp-validation-for="PasswordConfirmation"></span>
        </div>

        <div class="container">
            <input type="submit" value="Зарегистрироваться"/>
        </div>
    </form>
</div>